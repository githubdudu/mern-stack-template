  "author": "Dewey",
  "license": "MIT",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.1",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "vite": "^6.2.0",
    "vitest": "^3.0.7"
