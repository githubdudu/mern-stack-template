{
  "name": "mern-template-server",
  "version": "2.0.0",
  "description": "",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "vitest",
    "test:file": "vitest run",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write src",
    "init_db": "node src/db/init_db.js"
